<Window x:Class="ImageProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessor"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="Image Processor" 
        Height="920" MinHeight="600"
        Width="1800" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>

        <Menu>
            <MenuItem Width="100" Height="25" Header="File" StaysOpenOnClick="True">
                <MenuItem Header="Settings" Width="200" Height="25" Icon="Images/Settings.png"/>
            </MenuItem>
            <MenuItem Width="100" Height="25" Header="Help">
                <Button Content="Help"/>
            </MenuItem>
        </Menu>
        
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="PK1"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
